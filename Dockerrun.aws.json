{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image" : "79709818/multi-client", 
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "79709818/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "79709818/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "79709818/multi-nginx",
            "hostname": "nginx",
            "essential":true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPost": 80
                }
            ],
            "links" : ["client", "server"]
        }
    ]
}